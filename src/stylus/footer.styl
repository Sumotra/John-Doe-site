.footer
  background-color #212227
  color #919191
  display grid
  font-size 14px
  font-weight 300
  grid-template-columns 4fr 3fr 5fr
  line-height 21px
  padding 5vh 10vw
.footer .title
  color #f9f9f9
.footer__about-me
  grid-row 1/3
.copyright
.follow-me__item
  text-transform uppercase
.follow-me__link
  color #919191
  font-size 14px
  font-weight 700
  line-height 24px
  &:hover
  &:focus
    color #f9f9f9
    text-decoration none
.footer__about-me
.contacts
.subscribe
.follow-me
.sponsors
  padding 5vh
.my-mail
  color inherit
  &:hover
  &:focus
    color inherit
    text-decoration none
.sponsors__logo
  border 1px solid #f4f8fb
  margin-top 5px
  margin-right 15px
  padding 20px 15px
.subscribe__form
  background-color #4d4e52
  display inline
  padding 15px
.subscribe__input
  font-size 14px
  width 85%
  &::placeholder
    color #919191
    text-transform uppercase
.subscribe__button
  font-size 18px
  font-weight 400
  vertical-align middle
  width 5%
.subscribe__input
.subscribe__button
  background none
  border none
  color #919191
  line-height 21px
  outline none
