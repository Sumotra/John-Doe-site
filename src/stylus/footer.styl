$footerTextColor = #919191
$footerTitleColor = #f9f9f9
.footer
  background-color #212227
  color $footerTextColor
  display grid
  font-size 1em
  font-weight 300
  grid-template-columns 4fr 3fr 5fr
  line-height 1.5em
  padding 3vw 10vw 1vw
.footer .title
  color $footerTitleColor
.footer__about-me
  grid-row 1/3
.copyright
.follow-me__item
  text-transform uppercase
.follow-me__link
  color $footerTextColor
  font-size 1em
  font-weight 700
  line-height 1.8em
  &:hover
  &:focus
    color $footerTitleColor
    text-decoration none
.footer__about-me
.contacts
.subscribe
.follow-me
.sponsors
  padding 2vw
.my-mail
  color inherit
  &:hover
  &:focus
    color inherit
    text-decoration none
.sponsors__logo
  border 1px solid #f4f8fb
  margin-top 5px
  margin-right 15px
  padding 20px 15px
.subscribe__form
  background-color #4d4e52
  display inline
  padding 1em
.subscribe__input
  font-size 1em
  width 85%
  &::placeholder
    color $footerTextColor
    text-transform uppercase
.subscribe__button
  font-size 1.3em
  font-weight 400
  vertical-align middle
  width 5%
.subscribe__input
.subscribe__button
  background none
  border none
  color $footerTextColor
  line-height 1.5em
  outline none
